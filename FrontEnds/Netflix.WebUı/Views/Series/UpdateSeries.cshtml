@model UpdateSeriesDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update Series Detail</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h2>Dizi Güncelle</h2>
        <form method="post">
            <input asp-for="@Model.SeriesId" >@Model.SeriesId</input>
            <div class="mb-3">
                <label> Dizi Adı</label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="mb-3">
                <label> Dizi Açıklaması</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label> Dizi çıkış tarihi</label>
                <input asp-for="ReleaseDate" class="form-control" type="date" />
            </div>
            <div class="mb-3">
                <label> Dizi toplam sezonu</label>
                <input asp-for="TotalSeasons" class="form-control" type="number" />
            </div>
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a href="/Series/List" class="btn btn-secondary">Geri Dön</a>
        </form>
    </div>
</body>
</html>
