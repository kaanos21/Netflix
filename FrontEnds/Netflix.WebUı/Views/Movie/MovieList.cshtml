@model List<Netflix.DtoLayer.MovieDtos.MoviesDtos.ResultMovieDto>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Movie List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center">Movie List</h2>

        @if (Model != null && Model.Any())
        {
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Movie ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Release Date</th>
                        <th>Duration (min)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model)
                    {
                        <tr>
                            <td>@movie.MoviesId</td>
                            <td>@movie.Title</td>
                            <td>@movie.Description</td>
                            <td>@movie.ReleaseDate.ToString("yyyy-MM-dd")</td>
                            <td>@movie.Duration</td>
                            <td>
                                <a href="/Movie/AddMovie/@movie.MoviesId" class="btn btn-primary btn-sm">Ekle</a>
                                <a href="/Movie/DeleteMovie/@movie.MoviesId" class="btn btn-danger btn-sm">Sil</a>
                                <a href="/Movie/MovieDetail/@movie.MoviesId" class="btn btn-info btn-sm">İzle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center">No movies available at the moment.</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
