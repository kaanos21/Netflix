@model GetByIdMovieDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Movie Detail</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center">Movie Detail - @Model.Title</h2>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Title: @Model.Title</h5>
                <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                <p class="card-text"><strong>Release Date:</strong> @Model.ReleaseDate.ToString("yyyy-MM-dd")</p>
                <p class="card-text"><strong>Duration:</strong> @Model.Duration minutes</p>
                <td>
                    @await Component.InvokeAsync("_MovieSubtitleViewComponents", new { contentId = Model.MoviesId }) <!-- View Component çağrısı -->
                </td>
                <a href="/Movie/WatchMovie/@Model.MoviesId" class="btn btn-info">İzle</a>
                <a href="/Movie/DeleteMovie/@Model.MoviesId" class="btn btn-danger">Sil</a>
            </div>
        </div>
        <div class="mt-3">
            <a href="/Movie" class="btn btn-secondary">Back to Movie List</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
