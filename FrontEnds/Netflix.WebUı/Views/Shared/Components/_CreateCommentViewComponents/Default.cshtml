@model CreateCommentsDto

<form asp-controller="Comment" asp-action="AddComment" method="post">
    <input type="hidden" asp-for="ContentId" />

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="CommentText">Comment</label>
        <textarea asp-for="CommentText" class="form-control" rows="4" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Add Comment</button>
</form>
