@model List<Netflix.DtoLayer.LanguagesDtos.SubtitleDtos.GetSubtitlesWithLanguageByContentIdDto>

@{
    Layout = null; // Layout kullanmak istemiyorsanız bu satırı bırakın
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> <!-- Bootstrap CSS -->
</head>
<body>
    <div class="container my-5">
        <h2>Available Subtitles</h2>
        @if (Model != null && Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Subtitle ID</th>
                        <th>Content ID</th>
                        <th>Language ID</th>
                        <th>Language Name</th>
                        <th>Subtitle File URL</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var subtitle in Model)
                    {
                        <tr>
                            <td>@subtitle.SubtitlesId</td>
                            <td>@subtitle.ContentId</td>
                            <td>@subtitle.LanguageId</td>
                            <td>@subtitle.LanguageName</td>
                            <td><a href="@subtitle.SubtitleFileUrl" target="_blank">Download Subtitle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No subtitles available for this content.</p> <!-- Veri yoksa mesaj -->
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> <!-- Bootstrap JS -->
</body>
</html>
